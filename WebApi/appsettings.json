{
  "ConnectionStrings": {
    "RentACar": "Server=(localdb)\\mssqllocaldb; Database=RentACarCourseDb; Trusted_Connection=true"
  },
  "CacheSettings": {
    "SlidingExpiration": 2
  },
  "Serilog": {
    "FileLogConfiguration": {
      "FolderPath": "/logs/"
    },
    "MsSqlConfiguration": {
      "AutoCreateSqlTable": true,
      "ConnectionString": "Server=(localdb)\\mssqllocaldb; Database=RentACarCourseDb; Trusted_Connection=true",
      "TableName": "Logs"
    },
    "ElasticsearchConfiguration": {
      "Url": "http://localhost:9200/",
      "AppName": "rentACar-Api"
    },
    "MinimumLevel": {
      "Default": "Information",
      "Override": {
        "Microsoft.Hosting.Lifetime": "Warning",
        "Microsoft": "Warning",
        "System": "Warning"
      }
    }
  },
  "AllowedHosts": "*"
}